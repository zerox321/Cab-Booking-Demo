<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/noLocationCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        app:cardCornerRadius="@dimen/key_linesV"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/key_lines"
            android:gravity="center_vertical"
            android:padding="@dimen/key_lines"
            android:text="@string/location_disabled_content"
            android:textSize="@dimen/mainFont"
            app:drawableTopCompat="@drawable/ic_baseline_location_off_24" />
    </androidx.cardview.widget.CardView>
</layout>

