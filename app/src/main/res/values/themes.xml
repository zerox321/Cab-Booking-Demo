<resources>
    <!-- Base application theme. -->
    <style name="Theme.LocationService" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="colorControlHighlight">@color/purple_alpha</item>

        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="rounded_button_style" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/mainFont</item>
        <item name="android:padding">@dimen/key_lines</item>
        <item name="android:layout_margin">@dimen/key_lines</item>
        <item name="cornerRadius">@dimen/key_linesV</item>
    </style>

    <style name="offer_name_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">@dimen/mainFont</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:padding">@dimen/key_linesV</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="offer_content_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/secondFont</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingStart">@dimen/key_linesV</item>
        <item name="android:paddingEnd">@dimen/key_linesV</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="offer_description_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">@dimen/secondFont</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:padding">@dimen/key_linesV</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>